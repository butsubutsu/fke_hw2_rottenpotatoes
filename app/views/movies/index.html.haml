-#  This file is app/views/movies/index.html.haml
%h1 All Movies
= form_tag movies_path, :method => :get do
  Include: 
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]",1,@checked[rating]
  = submit_tag 'Refresh', :id=>"ratings_submit"
%table#movies
  %thead
    %tr
      %th{:class=>session[:sort_title]} 
        /%a{:id=>"title_header",:href=>"www.google.co.uk"}  Movie Title
        %a#title_header=link_to "Movie Title", movies_path(params.merge({:sort=>:title}))
      %th Rating
      %th{:class=>session[:sort_release_date]} 
        /%a(id="release_date_header" href="www.google.co.uk") Release Date
        %a#release_date_header=link_to "Release Date", movies_path(params.merge({:sort=>:release_date}))
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
